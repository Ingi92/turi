<% content_for :page_title do %>
    <i class="fa fa-plus"></i> <strong>Create Account</strong>
<% end %>

<!-- Register Block -->
<div class="block animation-fadeInQuickInv">
  <!-- Register Title -->
  <div class="block-title">
    <div class="block-options pull-right">
      <a href="<%=new_user_session_path%>" class="btn btn-effect-ripple btn-primary" data-toggle="tooltip" data-placement="left" title="Back to login"><i class="fa fa-user"></i></a>
    </div>
    <h2>Register</h2>
  </div>
  <!-- END Register Title -->

  <!-- Register Form -->
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>

      <!-- Display error message(s) to the user -->
      <% unless devise_error_messages!.empty? %>
        <% flash.now[:error] = devise_error_messages! %>
        <%= render 'layouts/messages' %>
      <% end %>


      <!-- Display the registration form -->
      <div class="form-group">
        <div class="col-xs-12">
          <%= f.text_field :name, class: 'form-control', placeholder: 'Username', autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-12">
          <%= f.text_field :email, class: 'form-control', placeholder: 'Email' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-12">
          <%= f.password_field :password, class: 'form-control', placeholder: 'Password (8 characters minimum)', autocomplete: 'off' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-12">
          <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Verify Password', autocomplete: 'off' %>
        </div>
      </div>

      <div class="form-group form-actions">
        <div class="col-xs-12 text-right">
          <%= f.submit 'Create Account', class: 'btn btn-effect-ripple btn-sm btn-primary' %>
        </div>
      </div>

  <% end %>
  <!-- END Register Form -->
</div>
<!-- END Register Block -->
