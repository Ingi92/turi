<div class="row">
  <div class="col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2">
    <div class="block">
      <!-- Horizontal Form Title -->
      <div class="block-title">
          <h2>
              <% if current_page?(:action => 'new') %>
                  Create a Equipment List for <%= @trip.title %>
              <% else %>
                  Edit <%= @equipment_list.name %>
              <% end %>
          </h2>
      </div>
      <!-- END Horizontal Form Title -->

      <%= form_for [@trip, @equipment_list], html: {class: 'form-horizontal form-bordered'} do |f| %>
          <% if @equipment_list.errors.any? %>
              <div id="error_explanation">
                <h2> <%= pluralize(@equipment_list.errors.count, "error") %>
                  prohibited this equipment list from begin saved:
                </h2>
                <ul>
                  <% @equipment_list.errors.full_messages.each do |msg| %>
                      <li><%= msg %> </li>
                  <% end %>
                </ul>
              </div>
          <% end %>

          <div class="form-group">
            <%= f.label :name, class: 'col-md-3 control-label' %>
            <div class="col-md-9">
              <%= f.text_field :name, class: 'form-control'%>
              <span class="help-block">Any equipment list name that's fine.</span>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :description, class: 'col-md-3 control-label' %>
            <div class="col-md-9">
              <div class="input-group">
                <%= f.text_field :description, class: 'form-control', placeholder: 'Equipment list description.' %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :icon, class: 'col-md-3 control-label' %>
            <div class="col-md-9">
              <%= f.text_field :icon, class: 'form-control', placeholder: 'Awesome icon for your equipment list...'%>
            </div>
          </div>

          <div class="form-group form-actions">
            <div class="col-md-9 col-md-offset-3">
              <%= f.submit class: 'btn btn-effect-ripple btn-primary', id: 'submit' %>
              <%= link_to 'Cancel', :back, class: 'btn btn-effect-ripple btn-primary', id: 'cancel_button' %>
            </div>
          </div>

      <% end %>
      <!-- END Horizontal Form Content -->
    </div>
  </div>
</div>



