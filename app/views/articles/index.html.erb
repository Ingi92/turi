<% content_for :page_title do %>
    <%= 'Blog Index ' %>
<% end %>

<div class="content-header">
  <div class="row">
    <div class="col-sm-6">
      <div class="header-section">
        <h1>Blog Index</h1>
      </div>
    </div>
  </div>
</div>

<div class="block-content-full" id="participant-list">
  <% if policy(@trip).update? %>
    <div class="text-center widget-content">
      <%= link_to raw('<i class="fa fa-plus"></i> ' << 'Create new blog'), new_trip_article_path(@trip), id: 'add_article_button',class: 'btn btn-primary push-bit' %>
    </div>
  <% end %>
</div>

<% articles = @trip.articles.reverse %>
<% articles.each do |art| %>
<!-- Block -->
    <div class="block">
      <!-- Block Title -->
      <div class="block-title">
        <a href="<%= trip_article_path(@trip, art) %>"><h2><%= art.title %></h2></a>
        <div class="pull-right">
          <h2><%= art.created_at.strftime(' %d %B %Y') %></h2>
        </div>
      </div>
      <!-- END Block Title -->

      <!-- Block Content -->
      <p>
        <%= truncate(art.content, length: 1000, separator: ' ') %>
      </p>
      <!-- END Block Content -->
    </div>
    <!-- END Block -->

<% end %>