<% content_for :page_title do %>
    Advanced Search
<% end %>

<% content_for :page_class do %>
    background-image
<% end %>

<% content_for :content_header do %>
    <%= render 'searchform' %>
<% end %>

<% unless @user.blank? %>
    <% @user.each do |user| %>
        <%= render 'users/user', :user => user %>
    <% end %>

<% else %>
    <div class="row">
      <div class="col-lg-12">
        <h1 class="text-center"><%= "No user found." %></h1>
      </div>
    </div>

<% end %>

<% unless @trips.nil? or @trips.blank? %>

    <div class="row">
      <% @trips.each do |trip| %>
          <div class="col-lg-6">
            <%= render 'trips/trip', :trip => trip %>
          </div>
      <% end %>
    </div>

<% else %>

    <div class="row">
      <div class="col-lg-12">
        <h1 class="text-center"><%= t('trip_search_no_results') %></h1>
      </div>
    </div>

<% end %>