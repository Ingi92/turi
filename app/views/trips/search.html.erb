<% content_for :page_title do %>
    Advanced Search
<% end %>

<% content_for :content_header do %>
    <%= render 'searchform' %>
<% end %>

<% unless @trips.nil? and @trips.blank? %>

    <div class="row">
      <% @trips.each do |trip| %>
          <%= render 'trips/trip', :trip => trip %>
      <% end %>
    </div>

<% else %>

    <div class="row">
      <div class="col-lg-12">
        <h1 class="text-center">No trips found.</h1>
      </div>
    </div>

<% end %>