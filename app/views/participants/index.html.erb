<% content_for :tab_content do %>
    <!-- Participants -->
    <div class="block-content-full" id="participant-list">
      <% if policy(Participant.new(trip_id: @trip.id)).create? %>
      <div class="text-center widget-content">
        <%= link_to raw('<i class="fa fa-plus"></i> Add participant'), new_trip_participant_path(@trip), id: 'add_participant_button',class: 'btn btn-sm btn-primary' %>
      </div>
      <% end %>
      <table class="table table-striped table-borderless table-vcenter remove-margin-bottom">
        <tbody>
        <tr class="animation-fadeInQuick2">
          <td class="text-center" style="width: 100px;"><%= image_tag @trip.user.gravatar_url, class: 'img-circle img-thumbnail img-thumbnail-avatar' %></td>
          <td>
            <h4><strong><%= @trip.user.name %></strong></h4>
            <i class="fa fa-fw fa-envelope text-danger" data-toggle="tooltip" title="Email"></i> <%= @trip.user.email %><br>
            <i class="fa fa-fw fa-user text-info" data-toggle="tooltip" title="Role"></i> Owner
          </td>
          <td class="text-right" style="width: 20%;">
            <a href="/path/to/account/page" class="btn btn-sm btn-primary" data-toggle="tooltip" title="Open Profile Page"><i class="fa fa-share"></i></a>
          </td>
        </tr>

        <% @trip.participants.each do |participant| %>

            <tr class="animation-fadeInQuick2" id="participant-row-<%= participant.id %>">
              <td class="text-center" style="width: 100px;"><%= image_tag participant.user.gravatar_url, class: 'img-circle img-thumbnail img-thumbnail-avatar' %></td>
              <td>
                <h4><strong><%= participant.user.name %></strong></h4>
                <i class="fa fa-fw fa-envelope text-danger" data-toggle="tooltip" title="Email"></i> <%= participant.user.email %><br>
                <i class="fa fa-fw fa-user text-info" data-toggle="tooltip" title="Role"></i> <%= I18n.t('trip_role_' << participant.participant_role.name) %>
              </td>
              <td class="text-right" style="width: 20%;">
                <a href="/path/to/account/page" class="btn btn-sm btn-primary" data-toggle="tooltip" title="Open Profile Page"><i class="fa fa-share"></i></a>
                <% if policy(participant).destroy? %>
                    <%= link_to raw('<i class="fa fa-trash"></i>'), trip_participant_path(@trip, participant), :method => :delete, class: 'btn btn-sm btn-primary remove-participant-button' %>
                <% end %>
              </td>
            </tr>

        <% end %>

        </tbody>
      </table>
    </div>
    <!-- END Participants -->
<% end %>

<%= render layout: 'trips/show_layout' do %>
    <% # Dirty layout trick, but does the work! %>
<% end %>