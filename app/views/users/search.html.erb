<% content_for :page_title do %>
    Search
<% end %>

<% content_for :page_class do %>
    background-image
<% end %>

<% content_for :content_header do %>
    <%= render 'searchform' %>
<% end %>

<% unless @user.nil? or @user.blank? %>

    <div class="row">
      <%@user.each do |user| %>
        <div class="col-lg-6">
          <%= render 'users/user', :user => user %>
        </div>
      <% end %>
    </div>

<% else %>

    <div class="row">
      <div class="col-lg-12">
        <h1 class="text-center"><%= t('user_search_no_results') %></h1>
      </div>
    </div>

<% end %>